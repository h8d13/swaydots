alias apkli='apk list --installed | grep --color=auto'
# requires elev

# set cable down and connect to arg1 SSID and generate ip
# example: cwifi "mynetwork" prompts for password if unkown

cwifi() {
    doas ip link set eth0 down && nmcli d wifi c "$1" -a && doas udhcpc -i wlan0
}

# set cable back up remove wlan and get ip
ccable() {
    doas ip link set eth0 up && doas ip link set wlan0 down && doas udhcpc -i eth0
}

play() { yt-dlp -f bestaudio -g "ytsearch:$*" | xargs mpv --no-video; }
playv() {
  local urls=$(yt-dlp -f "bestvideo[height<=1080]+bestaudio" -g "ytsearch:$*")
  local video=$(echo "$urls" | sed -n 1p)
  local audio=$(echo "$urls" | sed -n 2p)
  mpv "$video" --audio-file="$audio"
}
